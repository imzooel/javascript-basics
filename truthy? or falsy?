  console.log(`condition is true`);
}
else {
  console.log(`condition is false`);
}
//this will return true cause here 0 is considered as a string becasue of quotes




let zakir = "";
if (zakir) {
  console.log(`condition is true`);
}
else {
  console.log(`condition is false`);
}
//output will be false, because it's an empty string. same output will be given as 'SINGLE QUOTES' & `BACK TICKS`



let zakir = {};
if (zakir) {
  console.log(`condition is true`);
}
else {
  console.log(`condition is false`);
}
//return true for empty Object or empty Array
